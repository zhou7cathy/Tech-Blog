<div class="row mt-4">
  <div class="col-md-6">
    <h3>Update your Post:</h3>

    <form post-id="{{id}}" class="form update-post-form">
      <div class="form-group">
        <label for="post-title">Title:</label>
        <input value="{{title}}" class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-content">Content:</label>
        <input value="{{contents}}" class="form-input" type="text" id="post-content" name="post-content" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/updatepost.js"></script>